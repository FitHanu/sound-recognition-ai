<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:padding="8dp">

  <TextView android:id="@+id/cell_time" android:layout_weight="1" android:layout_width="0dp"
    android:layout_height="wrap_content" android:textSize="14sp" />
  <TextView android:id="@+id/cell_label" android:layout_weight="1" android:layout_width="0dp"
    android:layout_height="wrap_content" android:textSize="14sp" />
  <TextView android:id="@+id/cell_category" android:layout_weight="1" android:layout_width="0dp"
    android:layout_height="wrap_content" android:textSize="14sp" />
  <TextView android:id="@+id/cell_confidence" android:layout_weight="1" android:layout_width="0dp"
    android:layout_height="wrap_content" android:textSize="14sp" />
</LinearLayout>
